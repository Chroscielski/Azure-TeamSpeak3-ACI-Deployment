{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "defaultValue": "teamspeak3server",
            "type": "String",
            "metadata": {
                "description": "Name of the Container Instances resource deployed to your Azure account."
            }
        },
        "subdomain": {
            "defaultValue": "teamspeak3server",
            "type": "String",
            "metadata": {
                "description": "Subdomain name. The result will be: xxx.westeurope.azurecontainer.io, where xxx is the value of the parameter. It should also be globally unique, since it is a domain."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location of the resource."
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('resourceName')]",
            "location": "[parameters('location')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('resourceName')]",
                        "properties": {
                            "image": "teamspeak",
                            "command": [
                            ],
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                },
                                {
                                    "protocol": "UDP",
                                    "port": 9987
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 10011
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 30033
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "TS3SERVER_LICENSE",
                                    "value": "accept"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 0.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        },
                        {
                            "protocol": "UDP",
                            "port": 9987
                        },
                        {
                            "protocol": "TCP",
                            "port": 10011
                        },
                        {
                            "protocol": "TCP",
                            "port": 30033
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "[parameters('subdomain')]"
                },
                "osType": "Linux"
            }
        }
    ]
}